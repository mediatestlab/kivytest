#:kivy 1.11.1

<PongBall>
    size: 25, 25
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size 

<PongPaddle>
    size: 10, 100
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size


<PongGame>
    ball: pong_ball
    player1: player_left
    player2: player_right

    canvas:
        Rectangle:
            pos: self.center_x-2 ,0
            size: 4, self.height

    Label:
        font_size: 25
        center_x: root.width / 4
        top: root.top -10
        text: 'Player one score: ' + str(root.player1.score)
        
    Label:
        font_size: 25
        center_x: root.width * 3 / 4
        top: root.top -10
        text: 'Player two score: ' + str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x + 40
        center_y: root.center_y
        
    PongPaddle:
        id: player_right
        x: root.width - self.width -40
        center_y: root.center_y